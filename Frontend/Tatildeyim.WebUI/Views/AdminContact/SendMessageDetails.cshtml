@model GetSendMessageByIDDto
@{
    ViewData["Title"] = "SendMessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj</a>
    @await Html.PartialAsync("SidebarAdminContactPartial")
    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("SidebarAdminContactCategoryPartial")
</div>
<div class="email-right-box">
    <div class="read-content">
        <div class="media pt-5">
            <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
            <div class="media-body">
                <h5 class="m-b-3">@Model.ReceiverName</h5>
                <p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                <span class="float-right">@(((DateTime)Model.Date).ToString("H:mm"))</span>
                <h4 class="m-0 text-primary">@Model.Title</h4><small class="text-muted">Kime: @Model.ReceiverMail</small>
            </div>
        </div>
        <p>@Model.Content</p>
    </div>
</div>

